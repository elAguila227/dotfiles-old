#!/usr/bin/env bash
layouts=("us" "es")
current=$(setxkbmap -query | grep layout | awk '{print $2}')

for i in ${!layouts[@]}; do
    if [[ ${layouts[$i]} == $current ]]; then
        setxkbmap ${layouts[($i+1)%${#layouts[@]}]} &&
        notify-send "Changed layout: ${layouts[($i+1)%${#layouts[@]}]}"
        exit 0
    fi
done

layouts+=($current)

choise=$(printf '%s\n' ${layouts[@]} | dmenu -p "Layout '$current', Change?" -l 7)

if [[ $choise != "" ]]; then
    setxkbmap $choise &&
    notify-send "Changed layout: $choise"
fi

pidof dwmblocks && pkill -RTMIN+10 dwmblocks
