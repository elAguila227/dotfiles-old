#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) pamixer --allow-boost -d 5 ;;
	2) pamixer -t ;;
	3) pamixer --allow-boost -i 5 ;;
esac

[ $(pamixer --get-mute) = true ] && echo ïª€ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï©½"
elif [ "$vol" -lt "30" ]; then
	icon="ï©¾"
else
	icon="ï©¿"
fi

echo "$icon $vol%"

