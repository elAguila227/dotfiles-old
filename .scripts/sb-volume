#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted.

case $BUTTON in
  1)  ;;
	2) pamixer -t ;;
  3) audio-devices-menu ;;
	4) pamixer --allow-boost -i 5 ;;
  5) pamixer --allow-boost -d 5 ;;
esac

[ $(pamixer --get-mute) = true ] && echo ó°– && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ó°•¾"
elif [ "$vol" -lt "30" ]; then
	icon="ó°•¿"
else
	icon="ó°–€"
fi

echo "$icon $vol%"

