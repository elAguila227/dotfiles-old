#!/bin/sh

# Show wifi ïª¨ and percent strength or ïª© if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ï¡€ if a vpn connection is active

case $BUTTON in
	1) st -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) pkill -RTMIN+4 dwmblocks ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ïª©" ;;
	up) wifiicon="ïª¨ $(awk '/^\s*w/ { print int($3 * 100 / 70) }' /proc/net/wireless)%" ;;
esac

printf "[%s %s %s]\n" "$wifiicon" "$(sed "s/down/âŽ/;s/up/ðŸŒ/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ï¡€/" /sys/class/net/tun*/operstate 2>/dev/null)"
